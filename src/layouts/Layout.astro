---
import { ClientRouter } from 'astro:transitions'
import '@/styles/global.css'
import Footer from '@/components/Footer.astro'
import { fixedTitle } from '@/constants/pageTitles'
interface Props {
	title: string
}

const { title = fixedTitle} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Preload de las fuentes para que no se vea el cambio de fuente al cargar la pagina -->
		<link rel="preload" href="/fonts/Roboto-Regular.ttf" as="font" type="font/ttf" crossorigin="anonymous" />
		<link rel="preload" href="/fonts/Roboto-Medium.ttf" as="font" type="font/ttf" crossorigin="anonymous" />
		<link rel="preload" href="/fonts/Roboto-Bold.ttf" as="font" type="font/ttf" crossorigin="anonymous" />
		<!-- Metadata -->
		<meta name="description" content="Portfolio de Javier Placencia" />
		<meta name="keywords" content="portfolio, javier placencia, desarrollador web, frontend, backend" />
		<meta name="author" content="Javier Placencia" />
		<!-- Habilita la transicion de navegacion del cliente -->
		<ClientRouter />
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>

<style>
	html {
		margin: 0;
		width: 100%;
		background: 
			linear-gradient(180deg, #0a1f2e 0%, #10232e 50%, #0a1f2e 100%),
			repeating-linear-gradient(45deg, transparent, transparent 100px, rgba(17, 161, 130, 0.02) 100px, rgba(17, 161, 130, 0.02) 200px);
		color: var(--color-theme-soft-blue);
		font-family: 'Roboto', sans-serif;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		position: relative;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		height: 300px;
		background: radial-gradient(ellipse at top, rgba(17, 161, 130, 0.15) 0%, transparent 70%);
		pointer-events: none;
		z-index: 0;
	}
</style>
